<UserControl x:Class="HotelDB_WPF_Framework.UserControls.UCAbout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#D8EAD3">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Width="Auto">

            <!-- Estilo aplicado a todos os TextBlocks dentro deste StackPanel -->
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Sylfaen"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="#2C2C2C"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="About the Application"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <TextBlock Margin="0,0,0,20">
                <Run Text="StaySafe Hotels is a PMS (Property Management System)."/>
                <LineBreak/>
                <Run Text="Developed for the training unit "/>
                <Run Text="UFCD 5417 – Programação Web" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="It includes a WPF client and a Web API."/>
            </TextBlock>

            <TextBlock Text="Architecture"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,20">
                <Run Text="- WPF Client Application (.NET Framework) using UserControls"/>
                <LineBreak/>
                <Run Text="- ASP.NET Web API with service and controller layers"/>
                <LineBreak/>
                <Run Text="- LINQ to SQL for database access"/>
            </TextBlock>

            <TextBlock Text="Features"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,20">
                <Run Text="- Management of Guests, Rooms, Bookings, Extras and Invoices"/>
                <LineBreak/>
                <Run Text="- Automatic room selection based on availability and type"/>
                <LineBreak/>
                <Run Text="- Input validation using helper classes"/>
                <LineBreak/>
                <Run Text="- Invoice creation with automatic total calculation"/>
                <LineBreak/>
                <Run Text="- Dashboard with statistics loaded from the API"/>
            </TextBlock>

            <TextBlock Text="Technologies"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,20">
                <Run Text="- WPF (.NET Framework)"/>
                <LineBreak/>
                <Run Text="- ASP.NET Web API"/>
                <LineBreak/>
                <Run Text="- LINQ to SQL"/>
                <LineBreak/>
                <Run Text="- SQL Server"/>
                <LineBreak/>
                <Run Text="- HTTP requests via HttpClient"/>
            </TextBlock>

            <TextBlock Text="Author"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock>
                <Run Text="Developed by: "/>
                <Run Text="Gonçalo Russo" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="Course: Técnico Especialista em Tecnologias e Programação de Sistemas de Informação"/>
                <LineBreak/>
                <Run Text="Version: 2.0.0"/>
                <LineBreak/>
                <Run Text="Year: 2025"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
