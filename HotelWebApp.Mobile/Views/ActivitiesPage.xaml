<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.ActivitiesPage"
             x:DataType="viewmodels:ActivitiesViewModel"
             Shell.NavBarIsVisible="True"
             Title="Activities"
             BackgroundColor="White">

    <RefreshView Command="{Binding LoadActivitiesCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- HERO HEADER -->
                <Grid RowDefinitions="140" Padding="0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1E3A8A" Offset="0.0" />
                            <GradientStop Color="#3B82F6" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <VerticalStackLayout VerticalOptions="Center" 
                                         Padding="20"
                                         Spacing="8">
                        <Label Text="Hotel Activities"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="Discover and book exciting activities"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- CONTENT -->
                <VerticalStackLayout Padding="20" Spacing="15">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"
                                       Margin="0,20,0,0"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasActivities, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Frame Padding="30"
                               BackgroundColor="#F9FAFB"
                               BorderColor="Transparent"
                               CornerRadius="20"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="🎯"
                                       FontSize="64"
                                       HorizontalOptions="Center"/>
                                <Label Text="No activities available"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"
                                       HorizontalOptions="Center"/>
                                <Label Text="Check back later for new activities"
                                       FontSize="14"
                                       TextColor="#6B7280"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Activities List -->
                    <VerticalStackLayout IsVisible="{Binding HasActivities}"
                                         Spacing="12">
                        <CollectionView ItemsSource="{Binding Activities}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ActivityDto">
                                    <Frame Padding="0"
                                           Margin="0,0,0,12"
                                           CornerRadius="15"
                                           HasShadow="True"
                                           BorderColor="Transparent"
                                           BackgroundColor="White">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ActivitiesViewModel}}, Path=ViewActivityDetailsCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                              Padding="20"
                                              RowSpacing="12">

                                            <!-- Activity Header -->
                                            <HorizontalStackLayout Grid.Row="0"
                                                                   Spacing="12">
                                                <Frame Padding="12"
                                                       BackgroundColor="#FEF3C7"
                                                       BorderColor="Transparent"
                                                       CornerRadius="10"
                                                       HasShadow="False">
                                                    <Label Text="🎯"
                                                           FontSize="24"/>
                                                </Frame>
                                                <Label Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#1F2937"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>

                                            <!-- Description -->
                                            <Label Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="#6B7280"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="2"
                                                   IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"/>

                                            <!-- Info Cards -->
                                            <Grid Grid.Row="2"
                                                  ColumnDefinitions="*,*"
                                                  ColumnSpacing="10">
                                                <!-- Duration -->
                                                <Frame Grid.Column="0"
                                                       Padding="12"
                                                       BackgroundColor="#F9FAFB"
                                                       BorderColor="Transparent"
                                                       CornerRadius="8"
                                                       HasShadow="False">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="⏱️ Duration"
                                                               FontSize="11"
                                                               TextColor="#6B7280"/>
                                                        <Label Text="{Binding DisplayDuration}"
                                                               FontSize="14"
                                                               FontAttributes="Bold"
                                                               TextColor="#1F2937"/>
                                                    </VerticalStackLayout>
                                                </Frame>

                                                <!-- Schedule -->
                                                <Frame Grid.Column="1"
                                                       Padding="12"
                                                       BackgroundColor="#F9FAFB"
                                                       BorderColor="Transparent"
                                                       CornerRadius="8"
                                                       HasShadow="False">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="📅 Schedule"
                                                               FontSize="11"
                                                               TextColor="#6B7280"/>
                                                        <Label Text="{Binding DisplaySchedule}"
                                                               FontSize="14"
                                                               FontAttributes="Bold"
                                                               TextColor="#1F2937"
                                                               LineBreakMode="TailTruncation"/>
                                                    </VerticalStackLayout>
                                                </Frame>
                                            </Grid>

                                            <!-- Price and Availability -->
                                            <Grid Grid.Row="3"
                                                  ColumnDefinitions="*,Auto">
                                                <HorizontalStackLayout Grid.Column="0"
                                                                       Spacing="6"
                                                                       VerticalOptions="Center">
                                                    <Label Text="👥"
                                                           FontSize="14"
                                                           VerticalOptions="Center"/>
                                                    <Label Text="{Binding AvailabilityText}"
                                                           FontSize="13"
                                                           TextColor="#6B7280"
                                                           VerticalOptions="Center"/>
                                                </HorizontalStackLayout>

                                                <Label Grid.Column="1"
                                                       Text="{Binding FormattedPrice}"
                                                       FontSize="20"
                                                       FontAttributes="Bold"
                                                       TextColor="#1E3A8A"
                                                       VerticalOptions="Center"/>
                                            </Grid>

                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>