<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.ActivitiesPage"
             Title="Activities"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">

        <Frame Grid.Row="0" 
               Padding="20" 
               BackgroundColor="#1E3A8A" 
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout Spacing="5">
                <Label Text="Hotel Activities" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"/>
                <Label Text="Discover and book exciting activities" 
                       FontSize="14" 
                       TextColor="White" 
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     Command="{Binding LoadActivitiesCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="15">

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <VerticalStackLayout IsVisible="{Binding HasActivities, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Label Text="🎯" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="No activities available" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Check back later for new activities" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Activities}"
                                    IsVisible="{Binding HasActivities}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ActivityDto">
                                <Frame Padding="0" 
                                       Margin="0,0,0,10" 
                                       CornerRadius="15" 
                                       HasShadow="True"
                                       BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ActivitiesViewModel}}, Path=ViewActivityDetailsCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                          Padding="15">

                                        <!-- Header com Nome -->
                                        <HorizontalStackLayout Grid.Row="0" 
                                                               Spacing="10"
                                                               Margin="0,0,0,10">
                                            <Label Text="🎯" FontSize="24"/>
                                            <Label Text="{Binding Name}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>

                                        <!-- Descrição -->
                                        <Label Grid.Row="1"
                                               Text="{Binding Description}" 
                                               FontSize="14" 
                                               TextColor="#6B7280"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               Margin="0,0,0,10"
                                               IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"/>

                                        <!-- Informações -->
                                        <Grid Grid.Row="2" 
                                              ColumnDefinitions="*,*"
                                              Margin="0,0,0,10">
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="⏱️ Duration" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding DisplayDuration}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="📅 Schedule" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding DisplaySchedule}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"
                                                       LineBreakMode="TailTruncation"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Preço e Capacidade -->
                                        <HorizontalStackLayout Grid.Row="3" 
                                                               Spacing="10"
                                                               HorizontalOptions="End">
                                            <Label Text="{Binding AvailabilityText}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding FormattedPrice}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="#1E3A8A"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>
