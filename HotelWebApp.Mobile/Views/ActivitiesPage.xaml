<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.ActivitiesPage"
             x:DataType="viewmodels:ActivitiesViewModel"
             Shell.NavBarIsVisible="True"
             Title="Activities"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <RefreshView Command="{Binding LoadActivitiesCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- HERO SECTION WITH IMAGE BACKGROUND -->
                <Grid RowDefinitions="220">
                    <!-- Background Image -->
                    <Image Source="hotel_lobby.jpg"
                           Aspect="AspectFill"/>

                    <!-- White Overlay -->
                    <BoxView BackgroundColor="White"
                             Opacity="0.70"/>

                    <!-- Content -->
                    <VerticalStackLayout VerticalOptions="Center" 
                                         Spacing="12"
                                         Padding="40,0">

                        <Label Text="Discover Activities"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#1E3A8A"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.2"/>

                        <Label Text="Explore exciting experiences and book your favorite activities"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="#000000"
                               LineHeight="1.4"
                               HorizontalTextAlignment="Center"
                               Margin="10,0"/>

                    </VerticalStackLayout>
                </Grid>

                <!-- CONTENT -->
                <VerticalStackLayout Padding="40,30"
                                     Spacing="20">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"
                               LineHeight="1.5"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasActivities, Converter={StaticResource InvertedBoolConverter}}"
                                         Spacing="20"
                                         VerticalOptions="Center"
                                         Margin="0,40,0,0">
                        <Label Text="No Activities Available"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Check back later for exciting new activities and experiences"
                               FontSize="15"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.5"/>
                    </VerticalStackLayout>

                    <!-- Activities List -->
                    <VerticalStackLayout IsVisible="{Binding HasActivities}"
                                         Spacing="20">
                        <CollectionView ItemsSource="{Binding Activities}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ActivityDto">
                                    <Border StrokeThickness="0"
                                            StrokeShape="RoundRectangle 16"
                                            Padding="0"
                                            Margin="0,0,0,20"
                                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                                        <Border.Shadow>
                                            <Shadow Brush="Black" 
                                                    Opacity="0.1" 
                                                    Radius="10" 
                                                    Offset="0,4"/>
                                        </Border.Shadow>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ActivitiesViewModel}}, Path=ViewActivityDetailsCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                              Padding="24"
                                              RowSpacing="16">

                                            <!-- Activity Name -->
                                            <Label Grid.Row="0"
                                                   Text="{Binding Name}"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"/>

                                            <!-- Description -->
                                            <Label Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="3"
                                                   LineHeight="1.5"
                                                   IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"/>

                                            <!-- Info Grid -->
                                            <Grid Grid.Row="2"
                                                  ColumnDefinitions="*,*"
                                                  ColumnSpacing="12">

                                                <!-- Duration -->
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="Duration"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding DisplayDuration}"
                                                           FontSize="15"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                                </VerticalStackLayout>

                                                <!-- Schedule -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="4">
                                                    <Label Text="Schedule"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding DisplaySchedule}"
                                                           FontSize="15"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                                           LineBreakMode="TailTruncation"/>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Price and Availability -->
                                            <Grid Grid.Row="3"
                                                  ColumnDefinitions="*,Auto"
                                                  Margin="0,8,0,0">

                                                <Label Grid.Column="0"
                                                       Text="{Binding AvailabilityText}"
                                                       FontSize="13"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                       VerticalOptions="Center"/>

                                                <Label Grid.Column="1"
                                                       Text="{Binding FormattedPrice}"
                                                       FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                                                       VerticalOptions="Center"/>
                                            </Grid>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>