<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             x:Class="HotelWebApp.Mobile.Views.ConfirmEmailPage"
             x:DataType="viewmodels:ConfirmEmailViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Image Source="hotel_logo.png" 
                   HeightRequest="100"
                   Aspect="AspectFit"
                   Margin="0,0,0,20"/>

            <Label Text="Confirm Your Email"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Label Text="We've sent a confirmation code to your email. Please enter it below."
                   FontSize="14"
                   TextColor="White"
                   Opacity="0.9"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>

            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="20"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <Label Text="Email" 
                           FontSize="14" 
                           TextColor="{StaticResource Gray900}"/>

                    <Border StrokeThickness="1"
                            Stroke="{StaticResource Gray300}"
                            BackgroundColor="{StaticResource Gray100}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding Email}"
                               FontSize="16"
                               TextColor="{StaticResource Gray600}"
                               Margin="15,12"
                               VerticalOptions="Center"/>
                    </Border>

                    <Label Text="Confirmation Code" 
                           FontSize="14" 
                           TextColor="{StaticResource Gray900}"
                           Margin="0,10,0,0"/>

                    <Border StrokeThickness="1"
                            Stroke="{StaticResource Gray300}"
                            BackgroundColor="{StaticResource Gray100}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding ConfirmationCode}"
                               Placeholder="Enter code from email"
                               TextColor="{StaticResource Gray900}"
                               PlaceholderColor="{StaticResource Gray400}"
                               FontSize="16"
                               HorizontalTextAlignment="Center"
                               Margin="10,0"/>
                    </Border>

                    <Label Text="Didn't receive the code?"
                           FontSize="13"
                           TextColor="{StaticResource Gray600}"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0"/>

                    <Label Text="Resend Code"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ResendCodeCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="{Binding ErrorMessage}"
                           IsVisible="{Binding HasError}"
                           TextColor="Red"
                           FontSize="12"
                           Margin="0,5,0,0"/>

                    <Button Text="Confirm Email"
                            Command="{Binding ConfirmEmailCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="8"
                            Margin="0,20,0,0"
                            IsEnabled="{Binding IsNotBusy}"/>

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}"
                                       HeightRequest="30"/>

                </VerticalStackLayout>
            </Border>

            <Button Text="Back to Login"
                    Command="{Binding BackToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="2"
                    HeightRequest="50"
                    CornerRadius="8"
                    Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>