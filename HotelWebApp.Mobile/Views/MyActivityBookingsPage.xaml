<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.MyActivityBookingsPage"
             x:DataType="viewmodels:MyActivityBookingsViewModel"
             Shell.NavBarIsVisible="True"
             Title="My Bookings"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HERO HEADER -->
        <Grid Grid.Row="0" RowDefinitions="140" Padding="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0.0" />
                    <GradientStop Color="#3B82F6" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid VerticalOptions="Center" Padding="20">
                <VerticalStackLayout Grid.Column="0" 
                                     Spacing="8"
                                     HorizontalOptions="Start">
                    <Label Text="My Activity Bookings"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="View and manage your reservations"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>

                <!-- Clear Cancelled Button -->
                <Button HorizontalOptions="End"
                        VerticalOptions="Center"
                        Text="ðŸ—‘ï¸"
                        Command="{Binding ClearCancelledBookingsCommand}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        FontSize="20"
                        WidthRequest="50"
                        HeightRequest="50"
                        CornerRadius="25"
                        Padding="0"/>
            </Grid>
        </Grid>

        <!-- CONTENT -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadBookingsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"
                                       Margin="0,20,0,0"/>

                    <!-- Cancelling Indicator -->
                    <Frame IsVisible="{Binding IsCancelling}"
                           BackgroundColor="#FEF3C7"
                           BorderColor="#F59E0B"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="10">
                            <ActivityIndicator IsRunning="True"
                                               Color="#F59E0B"
                                               WidthRequest="20"
                                               HeightRequest="20"/>
                            <Label Text="Cancelling booking..."
                                   TextColor="#92400E"
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasBookings, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Frame Padding="30"
                               BackgroundColor="#F9FAFB"
                               BorderColor="Transparent"
                               CornerRadius="20"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="ðŸŽ¯"
                                       FontSize="64"
                                       HorizontalOptions="Center"/>
                                <Label Text="No activity bookings yet"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"
                                       HorizontalOptions="Center"/>
                                <Label Text="Book your first activity to see it here"
                                       FontSize="14"
                                       TextColor="#6B7280"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Browse Activities Button -->
                        <Button Text="ðŸŽ¯ Browse Activities"
                                Command="{Binding NavigateToActivitiesCommand}"
                                BackgroundColor="#1E3A8A"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="10"
                                Margin="0,20,0,0"
                                HorizontalOptions="Center"
                                WidthRequest="250"/>
                    </VerticalStackLayout>

                    <!-- Bookings List -->
                    <VerticalStackLayout IsVisible="{Binding HasBookings}"
                                         Spacing="12">
                        <CollectionView ItemsSource="{Binding Bookings}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ActivityBookingDto">
                                    <Frame Padding="0"
                                           Margin="0,0,0,12"
                                           CornerRadius="15"
                                           HasShadow="True"
                                           BorderColor="Transparent"
                                           BackgroundColor="White">

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                              Padding="20"
                                              RowSpacing="12">

                                            <!-- Booking Header -->
                                            <Grid Grid.Row="0"
                                                  ColumnDefinitions="Auto,*,Auto">
                                                <Frame Grid.Column="0"
                                                       Padding="12"
                                                       BackgroundColor="#FEF3C7"
                                                       BorderColor="Transparent"
                                                       CornerRadius="10"
                                                       HasShadow="False">
                                                    <Label Text="ðŸŽ¯"
                                                           FontSize="24"/>
                                                </Frame>

                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="2"
                                                                     VerticalOptions="Center"
                                                                     Margin="12,0,0,0">
                                                    <Label Text="{Binding ActivityName}"
                                                           FontSize="18"
                                                           FontAttributes="Bold"
                                                           TextColor="#1F2937"/>
                                                    <Label Text="{Binding ActivityLocation}"
                                                           FontSize="12"
                                                           TextColor="#6B7280"
                                                           IsVisible="{Binding ActivityLocation, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                </VerticalStackLayout>

                                                <Frame Grid.Column="2"
                                                       Padding="8,4"
                                                       CornerRadius="5"
                                                       BackgroundColor="{Binding StatusColor}"
                                                       HasShadow="False"
                                                       VerticalOptions="Start">
                                                    <Label Text="{Binding StatusText}"
                                                           TextColor="White"
                                                           FontSize="10"
                                                           FontAttributes="Bold"/>
                                                </Frame>
                                            </Grid>

                                            <!-- Date and Time Cards -->
                                            <Grid Grid.Row="1"
                                                  ColumnDefinitions="*,*"
                                                  ColumnSpacing="10">
                                                <!-- Date -->
                                                <Frame Grid.Column="0"
                                                       Padding="12"
                                                       BackgroundColor="#F9FAFB"
                                                       BorderColor="Transparent"
                                                       CornerRadius="8"
                                                       HasShadow="False">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="ðŸ“… Date"
                                                               FontSize="11"
                                                               TextColor="#6B7280"/>
                                                        <Label Text="{Binding FormattedDate}"
                                                               FontSize="14"
                                                               FontAttributes="Bold"
                                                               TextColor="#1F2937"
                                                               LineBreakMode="TailTruncation"/>
                                                    </VerticalStackLayout>
                                                </Frame>

                                                <!-- Time -->
                                                <Frame Grid.Column="1"
                                                       Padding="12"
                                                       BackgroundColor="#F9FAFB"
                                                       BorderColor="Transparent"
                                                       CornerRadius="8"
                                                       HasShadow="False">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="ðŸ• Time"
                                                               FontSize="11"
                                                               TextColor="#6B7280"/>
                                                        <Label Text="{Binding TimeRange}"
                                                               FontSize="14"
                                                               FontAttributes="Bold"
                                                               TextColor="#1F2937"
                                                               LineBreakMode="TailTruncation"/>
                                                    </VerticalStackLayout>
                                                </Frame>
                                            </Grid>

                                            <!-- Participants Info -->
                                            <Frame Grid.Row="2"
                                                   Padding="12"
                                                   BackgroundColor="#F9FAFB"
                                                   BorderColor="Transparent"
                                                   CornerRadius="8"
                                                   HasShadow="False">
                                                <HorizontalStackLayout Spacing="8">
                                                    <Label Text="ðŸ‘¥"
                                                           FontSize="16"
                                                           VerticalOptions="Center"/>
                                                    <Label Text="{Binding ParticipantsText}"
                                                           FontSize="14"
                                                           TextColor="#1F2937"
                                                           FontAttributes="Bold"
                                                           VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                            </Frame>

                                            <!-- Price and Cancel Button -->
                                            <Grid Grid.Row="3"
                                                  ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding FormattedTotalPrice}"
                                                       FontSize="20"
                                                       FontAttributes="Bold"
                                                       TextColor="#1E3A8A"
                                                       VerticalOptions="Center"/>

                                                <!-- Cancel Button -->
                                                <Button Grid.Column="1"
                                                        Text="Cancel"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MyActivityBookingsViewModel}}, Path=CancelBookingCommand}"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="#EF4444"
                                                        TextColor="White"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        Padding="15,8"
                                                        CornerRadius="8">
                                                    <Button.Triggers>
                                                        <DataTrigger TargetType="Button"
                                                                     Binding="{Binding Status}"
                                                                     Value="Cancelled">
                                                            <Setter Property="IsVisible" Value="False"/>
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Button"
                                                                     Binding="{Binding Status}"
                                                                     Value="Completed">
                                                            <Setter Property="IsVisible" Value="False"/>
                                                        </DataTrigger>
                                                    </Button.Triggers>
                                                </Button>
                                            </Grid>

                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Floating Action Button -->
        <Button Grid.Row="2"
                Text="+ Browse Activities"
                Command="{Binding NavigateToActivitiesCommand}"
                BackgroundColor="#10B981"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="15"
                Margin="20,10,20,20"
                HorizontalOptions="Fill"
                IsVisible="{Binding HasBookings}">
            <Button.Shadow>
                <Shadow Brush="Black"
                        Offset="0,4"
                        Radius="8"
                        Opacity="0.3"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>