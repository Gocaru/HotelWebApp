<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.MyActivityBookingsPage"
             x:DataType="viewmodels:MyActivityBookingsViewModel"
             Shell.NavBarIsVisible="True"
             Title="My Bookings"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HERO SECTION WITH IMAGE BACKGROUND -->
        <Grid Grid.Row="0" RowDefinitions="220">
            <!-- Background Image -->
            <Image Source="hotel_lobby.jpg"
                   Aspect="AspectFill"/>

            <!-- White Overlay -->
            <BoxView BackgroundColor="White"
                     Opacity="0.70"/>

            <!-- Content -->
            <VerticalStackLayout VerticalOptions="Center" 
                                 Spacing="12"
                                 Padding="40,0">

                <Label Text="My Activity Bookings"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#1E3A8A"
                       HorizontalTextAlignment="Center"
                       LineHeight="1.2"/>

                <Label Text="View and manage your activity reservations"
                       FontSize="15"
                       FontAttributes="Bold"
                       TextColor="#000000"
                       LineHeight="1.4"
                       HorizontalTextAlignment="Center"
                       Margin="10,0"/>

            </VerticalStackLayout>
        </Grid>

        <!-- CONTENT -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadBookingsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="40,30"
                                     Spacing="20">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Cancelling Indicator -->
                    <Frame IsVisible="{Binding IsCancelling}"
                           BackgroundColor="#FEF3C7"
                           BorderColor="#F59E0B"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="12">
                            <ActivityIndicator IsRunning="True"
                                               Color="#F59E0B"
                                               WidthRequest="24"
                                               HeightRequest="24"/>
                            <Label Text="Cancelling booking..."
                                   TextColor="#92400E"
                                   FontSize="15"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"
                               LineHeight="1.5"/>
                    </Frame>

                    <!-- Clear Cancelled Button -->
                    <Border StrokeThickness="0"
                            StrokeShape="RoundRectangle 12"
                            Padding="0"
                            HeightRequest="48"
                            BackgroundColor="#EF4444"
                            IsVisible="{Binding HasCancelledBookings}">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ClearCancelledBookingsCommand}"/>
                        </Border.GestureRecognizers>
                        <Label Text="Clear Cancelled Bookings"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                    </Border>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasBookings, Converter={StaticResource InvertedBoolConverter}}"
                                         Spacing="20"
                                         VerticalOptions="Center"
                                         Margin="0,40,0,0">
                        <Label Text="No Activity Bookings Yet"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Book your first activity to see it here"
                               FontSize="15"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.5"/>

                        <!-- Browse Activities Button -->
                        <Border StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                HeightRequest="56"
                                BackgroundColor="#1E3A8A"
                                Margin="0,20,0,0"
                                WidthRequest="280"
                                HorizontalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToActivitiesCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Browse Activities"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Bookings List -->
                    <VerticalStackLayout IsVisible="{Binding HasBookings}"
                                         Spacing="20">
                        <CollectionView ItemsSource="{Binding Bookings}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ActivityBookingDto">
                                    <Border StrokeThickness="0"
                                            StrokeShape="RoundRectangle 16"
                                            Padding="0"
                                            Margin="0,0,0,20"
                                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                                        <Border.Shadow>
                                            <Shadow Brush="Black" 
                                                    Opacity="0.1" 
                                                    Radius="10" 
                                                    Offset="0,4"/>
                                        </Border.Shadow>

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                              Padding="24"
                                              RowSpacing="16">

                                            <!-- Activity Header with Status -->
                                            <Grid Grid.Row="0"
                                                  ColumnDefinitions="*,Auto">
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="{Binding ActivityName}"
                                                           FontSize="20"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"/>
                                                    <Label Text="{Binding ActivityLocation}"
                                                           FontSize="14"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                           IsVisible="{Binding ActivityLocation, Converter={StaticResource StringNotEmptyConverter}}"/>
                                                </VerticalStackLayout>

                                                <Border Grid.Column="1"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 8"
                                                        Padding="12,6"
                                                        BackgroundColor="{Binding StatusColor}"
                                                        VerticalOptions="Start">
                                                    <Label Text="{Binding StatusText}"
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontAttributes="Bold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Date and Time -->
                                            <Grid Grid.Row="1"
                                                  ColumnDefinitions="*,*"
                                                  ColumnSpacing="12">

                                                <!-- Date -->
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="6">
                                                    <Label Text="Date"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding FormattedDate}"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="2"/>
                                                </VerticalStackLayout>

                                                <!-- Time -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="6">
                                                    <Label Text="Time"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding TimeRange}"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="2"/>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Participants -->
                                            <HorizontalStackLayout Grid.Row="2"
                                                                   Spacing="8">
                                                <Label Text="Participants:"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                <Label Text="{Binding ParticipantsText}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                            </HorizontalStackLayout>

                                            <!-- Divider -->
                                            <BoxView Grid.Row="3"
                                                     HeightRequest="1"
                                                     Color="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"/>

                                            <!-- Price and Cancel -->
                                            <Grid Grid.Row="4"
                                                  ColumnDefinitions="*,Auto">

                                                <Label Grid.Column="0"
                                                       Text="{Binding FormattedTotalPrice}"
                                                       FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                                                       VerticalOptions="Center"/>

                                                <!-- Cancel Button -->
                                                <Border Grid.Column="1"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 10"
                                                        Padding="16,10"
                                                        BackgroundColor="#EF4444"
                                                        VerticalOptions="Center">
                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MyActivityBookingsViewModel}}, Path=CancelBookingCommand}"
                                                                              CommandParameter="{Binding .}"/>
                                                    </Border.GestureRecognizers>
                                                    <Label Text="Cancel"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="White"/>
                                                    <Border.Triggers>
                                                        <DataTrigger TargetType="Border"
                                                                     Binding="{Binding Status}"
                                                                     Value="Cancelled">
                                                            <Setter Property="IsVisible" Value="False"/>
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Border"
                                                                     Binding="{Binding Status}"
                                                                     Value="Completed">
                                                            <Setter Property="IsVisible" Value="False"/>
                                                        </DataTrigger>
                                                    </Border.Triggers>
                                                </Border>
                                            </Grid>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Floating Action Button -->
        <Border Grid.Row="2"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 15"
                Padding="0"
                HeightRequest="60"
                BackgroundColor="#10B981"
                Margin="40,10,40,30"
                IsVisible="{Binding HasBookings}">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.15" Radius="10" Offset="0,4"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToActivitiesCommand}"/>
            </Border.GestureRecognizers>
            <Label Text="+ Browse Activities"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Border>
    </Grid>
</ContentPage>