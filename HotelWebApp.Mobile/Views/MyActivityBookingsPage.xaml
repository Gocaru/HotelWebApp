<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.MyActivityBookingsPage"
             Title="My Activity Bookings"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto">

        <Frame Grid.Row="0" 
               Padding="20" 
               BackgroundColor="#1E3A8A" 
               CornerRadius="0"
               HasShadow="False">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="My Activity Bookings" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="View and manage your activity reservations" 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9"/>
                </VerticalStackLayout>

                <!-- Clear Cancelled Button -->
                <Button Grid.Column="1"
                        Text="ðŸ—‘ï¸ Clear Cancelled"
                        Command="{Binding ClearCancelledBookingsCommand}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        FontSize="12"
                        Padding="10,5"
                        CornerRadius="8"
                        VerticalOptions="Center"
                        HeightRequest="40"/>
            </Grid>
        </Frame>

        <RefreshView Grid.Row="1"
                     Command="{Binding LoadBookingsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="15">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Cancelling Indicator -->
                    <Frame IsVisible="{Binding IsCancelling}"
                           BackgroundColor="#FEF3C7"
                           BorderColor="#F59E0B"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="10">
                            <ActivityIndicator IsRunning="True"
                                               Color="#F59E0B"
                                               WidthRequest="20"
                                               HeightRequest="20"/>
                            <Label Text="Cancelling booking..."
                                   TextColor="#92400E"
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <VerticalStackLayout IsVisible="{Binding HasBookings, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Label Text="ðŸŽ¯" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="No activity bookings yet" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Book your first activity to see it here" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>

                        <!-- Browse Activities Button -->
                        <Button Text="ðŸŽ¯ Browse Activities"
                                Command="{Binding NavigateToActivitiesCommand}"
                                BackgroundColor="#1E3A8A"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                Padding="20,10"
                                CornerRadius="10"
                                Margin="0,20,0,0"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Bookings}"
                                    IsVisible="{Binding HasBookings}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ActivityBookingDto">
                                <Frame Padding="15" 
                                       Margin="0,0,0,10" 
                                       CornerRadius="15" 
                                       HasShadow="True"
                                       BorderColor="Transparent">

                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                          RowSpacing="10">

                                        <HorizontalStackLayout Grid.Row="0" 
                                                               Spacing="10">
                                            <Label Text="ðŸŽ¯" FontSize="24"/>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding ActivityName}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding ActivityLocation}" 
                                                       FontSize="14" 
                                                       TextColor="#6B7280"
                                                       IsVisible="{Binding ActivityLocation, Converter={StaticResource StringNotEmptyConverter}}"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>

                                        <Grid Grid.Row="1" 
                                              ColumnDefinitions="*,*">
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="ðŸ“… Date" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding FormattedDate}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="ðŸ• Time" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding TimeRange}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <HorizontalStackLayout Grid.Row="2" 
                                                               Spacing="10">
                                            <Label Text="ðŸ‘¥" 
                                                   FontSize="16"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding ParticipantsText}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Row="3" 
                                                               Spacing="10"
                                                               HorizontalOptions="End">
                                            <Frame Padding="8,4" 
                                                   CornerRadius="5"
                                                   BackgroundColor="{Binding StatusColor}"
                                                   HasShadow="False">
                                                <Label Text="{Binding StatusText}" 
                                                       TextColor="White" 
                                                       FontSize="12"
                                                       FontAttributes="Bold"/>
                                            </Frame>
                                            <Label Text="{Binding FormattedTotalPrice}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="#1E3A8A"
                                                   VerticalOptions="Center"/>

                                            <!-- Cancel Button - sÃ³ aparece se Status for Pending ou Confirmed -->
                                            <Button Text="Cancel"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MyActivityBookingsViewModel}}, Path=CancelBookingCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#EF4444"
                                                    TextColor="White"
                                                    FontSize="12"
                                                    Padding="10,5"
                                                    CornerRadius="5">
                                                <Button.Triggers>
                                                    <DataTrigger TargetType="Button"
                                                                 Binding="{Binding Status}"
                                                                 Value="Cancelled">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Button"
                                                                 Binding="{Binding Status}"
                                                                 Value="Completed">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                </Button.Triggers>
                                            </Button>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Floating Action Button - Visible only when there are bookings -->
        <Button Grid.Row="2"
                Text="+ Browse Activities"
                Command="{Binding NavigateToActivitiesCommand}"
                BackgroundColor="#10B981"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="15"
                Margin="20,10,20,20"
                HorizontalOptions="Fill"
                IsVisible="{Binding HasBookings}">
            <Button.Shadow>
                <Shadow Brush="Black"
                        Offset="0,4"
                        Radius="8"
                        Opacity="0.3"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>
