<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             x:Class="HotelWebApp.Mobile.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Title="Home"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="{Binding WelcomeMessage}"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1E3A8A"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"/>

            <!-- 👤 Profile Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Button Text="👤 My Profile"
                        Command="{Binding NavigateToProfileCommand}"
                        BackgroundColor="#6366F1"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

            <!-- 📅 Reservations Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Button Text="📅 My Reservations"
                        Command="{Binding NavigateToReservationsCommand}"
                        BackgroundColor="#1E3A8A"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

            <!-- 🎯 Activities Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Button Text="🎯 Activities"
                        Command="{Binding NavigateToActivitiesCommand}"
                        BackgroundColor="#1E3A8A"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

            <!-- 📋 Activity Bookings Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Button Text="📋 My Activity Bookings"
                        Command="{Binding NavigateToMyActivityBookingsCommand}"
                        BackgroundColor="#1E3A8A"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

            <!-- 🎁 Promotions Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <Button Text="🎁 Promotions"
                        Command="{Binding NavigateToPromotionsCommand}"
                        BackgroundColor="#10B981"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

            <!-- 🚪 Logout Button -->
            <Frame Padding="0" 
                   CornerRadius="10" 
                   HasShadow="True"
                   BorderColor="Transparent"
                   Margin="0,20,0,0">
                <Button Text="🚪 Logout"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="#DC2626"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        CornerRadius="10"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>