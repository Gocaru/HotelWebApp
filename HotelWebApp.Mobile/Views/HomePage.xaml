<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             x:Class="HotelWebApp.Mobile.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- HERO SECTION WITH IMAGE BACKGROUND -->
            <Grid RowDefinitions="220">
                <!-- Background Image -->
                <Image Source="hotel_lobby.jpg"
                       Aspect="AspectFill"/>

                <!-- White Overlay -->
                <BoxView BackgroundColor="White"
                         Opacity="0.70"/>

                <!-- Content -->
                <VerticalStackLayout VerticalOptions="Center" 
                                     Spacing="10"
                                     Padding="40,0">

                    <Label Text="Welcome Back"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1E3A8A"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.2"/>

                    <Label Text="{Binding UserFullName}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Grand Luxury Hotel &amp; Spa"
                           FontSize="14"
                           TextColor="#6B7280"
                           HorizontalTextAlignment="Center"
                           Margin="0,5,0,0"/>

                </VerticalStackLayout>
            </Grid>

            <!-- CONTENT -->
            <VerticalStackLayout Padding="40,30"
                                 Spacing="30">

                <!-- YOUR CURRENT STAY CARD -->
                <Border StrokeThickness="0"
                        StrokeShape="RoundRectangle 16"
                        Padding="24"
                        BackgroundColor="#1E3A8A">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.15" Radius="10" Offset="0,4"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="18">
                        <Label Text="Your Current Stay"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"/>

                        <!-- Room Number -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Room Number"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   Opacity="0.7"/>
                            <Label Text="Suite 1402"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </VerticalStackLayout>

                        <!-- Check-out Date -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Check-out"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   Opacity="0.7"/>
                            <Label Text="October 15, 2025"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- STATISTICS -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="15">

                    <!-- Upcoming -->
                    <Border Grid.Column="0"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                            StrokeShape="RoundRectangle 12"
                            Padding="20"
                            BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding UpcomingReservations}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                                   HorizontalOptions="Center"/>
                            <Label Text="Upcoming"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Completed -->
                    <Border Grid.Column="1"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                            StrokeShape="RoundRectangle 12"
                            Padding="20"
                            BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding CompletedStays}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="#059669"
                                   HorizontalOptions="Center"/>
                            <Label Text="Completed"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- SERVICES SECTION -->
                <VerticalStackLayout Spacing="20">

                    <Label Text="Services"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"/>

                    <!-- Services Grid -->
                    <Grid RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,*"
                          RowSpacing="15"
                          ColumnSpacing="15">

                        <!-- My Profile -->
                        <Border Grid.Row="0" Grid.Column="0"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,2"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Padding="20" Spacing="12">
                                <Label Text="My Profile"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                <Label Text="View &amp; edit profile"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Reservations -->
                        <Border Grid.Row="0" Grid.Column="1"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,2"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToReservationsCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Padding="20" Spacing="12">
                                <Label Text="Reservations"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                <Label Text="View bookings"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Activities -->
                        <Border Grid.Row="1" Grid.Column="0"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,2"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToActivitiesCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Padding="20" Spacing="12">
                                <Label Text="Activities"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                <Label Text="Pool, spa &amp; gym"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Promotions -->
                        <Border Grid.Row="1" Grid.Column="1"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,2"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToPromotionsCommand}"/>
                            </Border.GestureRecognizers>
                            <VerticalStackLayout Padding="20" Spacing="12">
                                <Label Text="Promotions"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                <Label Text="Special offers"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Additional Options -->
                    <VerticalStackLayout Spacing="12" Margin="0,10,0,0">

                        <!-- Invoices -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                                StrokeShape="RoundRectangle 12"
                                Padding="18"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToInvoicesCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Invoices &amp; Payments"
                                       FontSize="15"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       Text="›"
                                       FontSize="24"
                                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>

                        <!-- My Activity Bookings -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                                StrokeShape="RoundRectangle 12"
                                Padding="18"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToMyActivityBookingsCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="My Activity Bookings"
                                       FontSize="15"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       Text="›"
                                       FontSize="24"
                                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>

                        <!-- About -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                                StrokeShape="RoundRectangle 12"
                                Padding="18"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToAboutCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="About"
                                       FontSize="15"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       Text="›"
                                       FontSize="24"
                                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Sign Out -->
                    <Border StrokeThickness="2"
                            Stroke="#DC2626"
                            StrokeShape="RoundRectangle 12"
                            Padding="0"
                            HeightRequest="52"
                            BackgroundColor="Transparent"
                            Margin="0,20,0,20">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                        </Border.GestureRecognizers>
                        <Label Text="Sign Out"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#DC2626"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                    </Border>

                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>