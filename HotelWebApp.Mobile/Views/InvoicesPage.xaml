<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.InvoicesPage"
             x:DataType="viewmodels:InvoicesViewModel"
             Title="My Invoices"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Frame Grid.Row="0" 
               Padding="20" 
               BackgroundColor="#1E3A8A" 
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout Spacing="5">
                <Label Text="💳 My Invoices" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"/>
                <Label Text="View and pay your invoices" 
                       FontSize="14" 
                       TextColor="White" 
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Content -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadInvoicesCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="15">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasInvoices, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Label Text="💳" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="No invoices yet" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Your invoices will appear here" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Invoices List -->
                    <CollectionView ItemsSource="{Binding Invoices}"
                                    IsVisible="{Binding HasInvoices}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:InvoiceDto">
                                <Frame Padding="0" 
                                       Margin="0,0,0,10" 
                                       CornerRadius="15" 
                                       HasShadow="True"
                                       BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoicesViewModel}}, Path=ViewInvoiceDetailsCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                          Padding="15"
                                          RowSpacing="10">

                                        <!-- Header: Invoice # and Date -->
                                        <HorizontalStackLayout Grid.Row="0" 
                                                               Spacing="10"
                                                               HorizontalOptions="FillAndExpand">
                                            <Label Text="📄" FontSize="20"/>
                                            <VerticalStackLayout HorizontalOptions="StartAndExpand">
                                                <Label Text="{Binding Id, StringFormat='Invoice #{0}'}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding InvoiceDateFormatted}" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"/>
                                            </VerticalStackLayout>

                                            <!-- Status Badge -->
                                            <Frame Padding="8,4" 
                                                   CornerRadius="5"
                                                   BackgroundColor="{Binding StatusColor}"
                                                   HasShadow="False"
                                                   VerticalOptions="Start">
                                                <Label Text="{Binding StatusDisplayText}" 
                                                       TextColor="White" 
                                                       FontSize="11"
                                                       FontAttributes="Bold"/>
                                            </Frame>
                                        </HorizontalStackLayout>

                                        <!-- Room Info -->
                                        <HorizontalStackLayout Grid.Row="1" Spacing="5">
                                            <Label Text="🏨" FontSize="14"/>
                                            <Label Text="{Binding RoomNumber, StringFormat='Room {0}'}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="•" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding CheckInFormatted}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="→" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding CheckOutFormatted}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"/>
                                        </HorizontalStackLayout>

                                        <!-- Amounts -->
                                        <Grid Grid.Row="2" 
                                              ColumnDefinitions="*,*,*"
                                              ColumnSpacing="10">
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="Total" 
                                                       FontSize="11" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding TotalAmountFormatted}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1">
                                                <Label Text="Paid" 
                                                       FontSize="11" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding AmountPaidFormatted}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"
                                                       TextColor="#10B981"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2">
                                                <Label Text="Balance" 
                                                       FontSize="11" 
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding BalanceDueFormatted}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"
                                                       TextColor="#EF4444"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Pay Button (if has balance) -->
                                        <Button Grid.Row="3"
                                                Text="💳 Pay Now"
                                                IsVisible="{Binding HasBalance}"
                                                BackgroundColor="#1E3A8A"
                                                TextColor="White"
                                                FontSize="14"
                                                FontAttributes="Bold"
                                                HeightRequest="40"
                                                CornerRadius="8"
                                                Margin="0,5,0,0"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoicesViewModel}}, Path=ViewInvoiceDetailsCommand}"
                                                CommandParameter="{Binding .}"/>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>