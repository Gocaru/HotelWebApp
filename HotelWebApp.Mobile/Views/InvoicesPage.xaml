<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.InvoicesPage"
             x:DataType="viewmodels:InvoicesViewModel"
             Shell.NavBarIsVisible="True"
             Title="Invoices"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <RefreshView Command="{Binding LoadInvoicesCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- HERO SECTION WITH IMAGE BACKGROUND -->
                <Grid RowDefinitions="220">
                    <!-- Background Image -->
                    <Image Source="hotel_lobby.jpg"
                           Aspect="AspectFill"/>

                    <!-- White Overlay -->
                    <BoxView BackgroundColor="White"
                             Opacity="0.70"/>

                    <!-- Content -->
                    <VerticalStackLayout VerticalOptions="Center" 
                                         Spacing="12"
                                         Padding="40,0">

                        <Label Text="My Invoices"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#1E3A8A"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.2"/>

                        <Label Text="View and manage your payments"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="#000000"
                               LineHeight="1.4"
                               HorizontalTextAlignment="Center"
                               Margin="10,0"/>

                    </VerticalStackLayout>
                </Grid>

                <!-- CONTENT -->
                <VerticalStackLayout Padding="40,30"
                                     Spacing="20">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"
                               LineHeight="1.5"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasInvoices, Converter={StaticResource InvertedBoolConverter}}"
                                         Spacing="20"
                                         VerticalOptions="Center"
                                         Margin="0,40,0,0">
                        <Label Text="No Invoices Yet"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Your invoices will appear here"
                               FontSize="15"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.5"/>
                    </VerticalStackLayout>

                    <!-- Invoices List -->
                    <VerticalStackLayout IsVisible="{Binding HasInvoices}"
                                         Spacing="20">
                        <CollectionView ItemsSource="{Binding Invoices}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:InvoiceDto">
                                    <Border StrokeThickness="0"
                                            StrokeShape="RoundRectangle 16"
                                            Padding="0"
                                            Margin="0,0,0,20"
                                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                                        <Border.Shadow>
                                            <Shadow Brush="Black" 
                                                    Opacity="0.1" 
                                                    Radius="10" 
                                                    Offset="0,4"/>
                                        </Border.Shadow>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoicesViewModel}}, Path=ViewInvoiceDetailsCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                              Padding="24"
                                              RowSpacing="16">

                                            <!-- Invoice Header with Status -->
                                            <Grid Grid.Row="0"
                                                  ColumnDefinitions="*,Auto">
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="{Binding Id, StringFormat='Invoice #{0}'}"
                                                           FontSize="20"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"/>
                                                    <Label Text="{Binding InvoiceDateFormatted}"
                                                           FontSize="14"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                </VerticalStackLayout>

                                                <Border Grid.Column="1"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 8"
                                                        Padding="12,6"
                                                        BackgroundColor="{Binding StatusColor}"
                                                        VerticalOptions="Start">
                                                    <Label Text="{Binding StatusDisplayText}"
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontAttributes="Bold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Room and Dates -->
                                            <HorizontalStackLayout Grid.Row="1"
                                                                   Spacing="8">
                                                <Label Text="{Binding RoomNumber, StringFormat='Room {0}'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                                <Label Text="•"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                <Label Text="{Binding CheckInFormatted}"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                <Label Text="→"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                <Label Text="{Binding CheckOutFormatted}"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                            </HorizontalStackLayout>

                                            <!-- Divider -->
                                            <BoxView Grid.Row="2"
                                                     HeightRequest="1"
                                                     Color="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"/>

                                            <!-- Amount Summary -->
                                            <Grid Grid.Row="3"
                                                  ColumnDefinitions="*,*,*"
                                                  ColumnSpacing="12">

                                                <!-- Total -->
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="Total"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding TotalAmountFormatted}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"/>
                                                </VerticalStackLayout>

                                                <!-- Paid -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="4">
                                                    <Label Text="Paid"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding AmountPaidFormatted}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="#10B981"/>
                                                </VerticalStackLayout>

                                                <!-- Balance -->
                                                <VerticalStackLayout Grid.Column="2"
                                                                     Spacing="4">
                                                    <Label Text="Balance"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding BalanceDueFormatted}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="#EF4444"/>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Pay Button -->
                                            <Border Grid.Row="4"
                                                    StrokeThickness="0"
                                                    StrokeShape="RoundRectangle 12"
                                                    Padding="0"
                                                    HeightRequest="48"
                                                    BackgroundColor="#1E3A8A"
                                                    IsVisible="{Binding HasBalance}">
                                                <Border.Shadow>
                                                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                                                </Border.Shadow>
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoicesViewModel}}, Path=ViewInvoiceDetailsCommand}"
                                                                          CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Label Text="Pay Now"
                                                       FontSize="15"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center"/>
                                            </Border>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>