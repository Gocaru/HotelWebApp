<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.PromotionsPage"
             Title="Promotions"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">

        <Frame Grid.Row="0" 
               Padding="20" 
               BackgroundColor="#1E3A8A" 
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout Spacing="5">
                <Label Text="Special Promotions" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"/>
                <Label Text="Exclusive offers and discounts" 
                       FontSize="14" 
                       TextColor="White" 
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     Command="{Binding LoadPromotionsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="15">

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"/>
                    </Frame>

                    <VerticalStackLayout IsVisible="{Binding HasPromotions, Converter={StaticResource InvertedBoolConverter}}"
                                         Padding="20"
                                         Spacing="15"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50,0,0">
                        <Label Text="ðŸŽ" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="No promotions available" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Check back later for special offers" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <CollectionView ItemsSource="{Binding Promotions}"
                                    IsVisible="{Binding HasPromotions}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:PromotionDto">
                                <Frame Padding="0" 
                                       Margin="0,0,0,15" 
                                       CornerRadius="15" 
                                       HasShadow="True"
                                       BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PromotionsViewModel}}, Path=ViewPromotionDetailsCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid RowDefinitions="Auto,Auto">

                                        <Frame Grid.Row="0"
                                               Padding="0"
                                               CornerRadius="15"
                                               HasShadow="False"
                                               HeightRequest="120"
                                               BackgroundColor="#E0E7FF">
                                            <Label Text="ðŸŽ" 
                                                   FontSize="64" 
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>

                                        <Grid Grid.Row="1" 
                                              RowDefinitions="Auto,Auto,Auto"
                                              Padding="15">

                                            <HorizontalStackLayout Grid.Row="0" 
                                                                   Spacing="10"
                                                                   Margin="0,0,0,5">
                                                <Label Text="{Binding Title}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold"
                                                       VerticalOptions="Center"/>
                                                <Frame Padding="6,3" 
                                                       CornerRadius="5"
                                                       BackgroundColor="{Binding StatusColor}"
                                                       HasShadow="False"
                                                       VerticalOptions="Center">
                                                    <Label Text="{Binding StatusText}" 
                                                           TextColor="White" 
                                                           FontSize="10"
                                                           FontAttributes="Bold"/>
                                                </Frame>
                                            </HorizontalStackLayout>

                                            <Label Grid.Row="1"
                                                   Text="{Binding Description}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"
                                                   LineBreakMode="TailTruncation"
                                                   MaxLines="2"
                                                   Margin="0,0,0,10"/>

                                            <HorizontalStackLayout Grid.Row="2" 
                                                                   Spacing="10"
                                                                   HorizontalOptions="End">
                                                <Label Text="{Binding ValidPeriod}" 
                                                       FontSize="12" 
                                                       TextColor="#6B7280"
                                                       VerticalOptions="Center"/>
                                                <Label Text="{Binding FormattedDiscount}" 
                                                       FontSize="20" 
                                                       FontAttributes="Bold"
                                                       TextColor="#10B981"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>
