<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HotelWebApp.Mobile.ViewModels"
             xmlns:models="clr-namespace:HotelWebApp.Mobile.Models"
             x:Class="HotelWebApp.Mobile.Views.PromotionsPage"
             x:DataType="viewmodels:PromotionsViewModel"
             Shell.NavBarIsVisible="True"
             Title="Promotions"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <RefreshView Command="{Binding LoadPromotionsCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- HERO SECTION WITH IMAGE BACKGROUND -->
                <Grid RowDefinitions="220">
                    <!-- Background Image -->
                    <Image Source="hotel_lobby.jpg"
                           Aspect="AspectFill"/>

                    <!-- White Overlay -->
                    <BoxView BackgroundColor="White"
                             Opacity="0.70"/>

                    <!-- Content -->
                    <VerticalStackLayout VerticalOptions="Center" 
                                         Spacing="12"
                                         Padding="40,0">

                        <Label Text="Special Promotions"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#1E3A8A"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.2"/>

                        <Label Text="Discover exclusive offers and amazing discounts"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="#000000"
                               LineHeight="1.4"
                               HorizontalTextAlignment="Center"
                               Margin="10,0"/>

                    </VerticalStackLayout>
                </Grid>

                <!-- CONTENT -->
                <VerticalStackLayout Padding="40,30"
                                     Spacing="20">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#1E3A8A"
                                       HeightRequest="50"/>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           BackgroundColor="#FEE2E2"
                           BorderColor="#EF4444"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="False">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#991B1B"
                               FontSize="14"
                               LineHeight="1.5"/>
                    </Frame>

                    <!-- Empty State -->
                    <VerticalStackLayout IsVisible="{Binding HasPromotions, Converter={StaticResource InvertedBoolConverter}}"
                                         Spacing="20"
                                         VerticalOptions="Center"
                                         Margin="0,40,0,0">
                        <Label Text="No Promotions Available"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Check back later for exclusive offers and special deals"
                               FontSize="15"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                               HorizontalTextAlignment="Center"
                               LineHeight="1.5"/>
                    </VerticalStackLayout>

                    <!-- Promotions List -->
                    <VerticalStackLayout IsVisible="{Binding HasPromotions}"
                                         Spacing="20">
                        <CollectionView ItemsSource="{Binding Promotions}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:PromotionDto">
                                    <Border StrokeThickness="0"
                                            StrokeShape="RoundRectangle 16"
                                            Padding="0"
                                            Margin="0,0,0,20"
                                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}">
                                        <Border.Shadow>
                                            <Shadow Brush="Black" 
                                                    Opacity="0.1" 
                                                    Radius="10" 
                                                    Offset="0,4"/>
                                        </Border.Shadow>

                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                              Padding="24"
                                              RowSpacing="16">

                                            <!-- Title and Status -->
                                            <Grid Grid.Row="0"
                                                  ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding Title}"
                                                       FontSize="20"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                                                       VerticalOptions="Center"/>

                                                <Border Grid.Column="1"
                                                        StrokeThickness="0"
                                                        StrokeShape="RoundRectangle 6"
                                                        Padding="10,6"
                                                        BackgroundColor="{Binding StatusColor}"
                                                        VerticalOptions="Center">
                                                    <Label Text="{Binding StatusText}"
                                                           TextColor="White"
                                                           FontSize="11"
                                                           FontAttributes="Bold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Description -->
                                            <Label Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="3"
                                                   LineHeight="1.5"
                                                   IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"/>

                                            <!-- Info Grid -->
                                            <Grid Grid.Row="2"
                                                  ColumnDefinitions="*,*"
                                                  ColumnSpacing="12">

                                                <!-- Valid Period -->
                                                <VerticalStackLayout Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="Valid Period"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding DateRangeFormatted}"
                                                           FontSize="14"
                                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#E5E7EB}"
                                                           LineBreakMode="WordWrap"
                                                           MaxLines="2"/>
                                                </VerticalStackLayout>

                                                <!-- Discount -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="4">
                                                    <Label Text="Discount"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                    <Label Text="{Binding FormattedDiscount}"
                                                           FontSize="18"
                                                           FontAttributes="Bold"
                                                           TextColor="#10B981"/>
                                                </VerticalStackLayout>
                                            </Grid>

                                            <!-- Divider -->
                                            <BoxView Grid.Row="3"
                                                     HeightRequest="1"
                                                     Color="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                                                     IsVisible="{Binding Terms, Converter={StaticResource StringNotEmptyConverter}}"/>

                                            <!-- Terms -->
                                            <VerticalStackLayout Grid.Row="4"
                                                                 Spacing="6"
                                                                 IsVisible="{Binding Terms, Converter={StaticResource StringNotEmptyConverter}}">
                                                <Label Text="Terms &amp; Conditions"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                                <Label Text="{Binding Terms}"
                                                       FontSize="13"
                                                       TextColor="{AppThemeBinding Light=#1E3A8A, Dark=#60A5FA}"
                                                       LineBreakMode="WordWrap"
                                                       MaxLines="3"/>
                                            </VerticalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>