@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>

    <div class="col-md-6">
        <div class="text-center">
            <h4>Profile Picture</h4>

            @{
                string photoPath;
                if (!string.IsNullOrEmpty(Model.Input.ProfilePictureUrl))
                {
                    // Se já tem barra, usa direto; senão, adiciona o prefixo
                    photoPath = Model.Input.ProfilePictureUrl.StartsWith("/")
                    ? Model.Input.ProfilePictureUrl
                    : $"/images/profiles/{Model.Input.ProfilePictureUrl}";
                }
                else
                {
                    photoPath = "/images/profiles/default.png";
                }
            }
            <img src="@photoPath" class="img-fluid rounded-circle mb-3 shadow-sm"
                 style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture" asp-append-version="true" />

            @* 2. Formulário específico para o upload da imagem *@
            <form id="upload-picture-form" method="post" enctype="multipart/form-data"
                asp-page-handler="UploadPicture">

                <div class="form-group">
                    <label for="profilePictureFile" class="form-label visually-hidden">Change Picture</label>
                    <input name="profilePictureFile" type="file" class="form-control" accept=".png,.jpg,.jpeg" required />
                </div>
                <button type="submit" class="btn btn-secondary mt-2">
                    <i class="fas fa-upload"></i> Upload New Picture
                </button>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
