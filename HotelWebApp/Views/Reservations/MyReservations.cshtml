@model IEnumerable<HotelWebApp.Data.Entities.Reservation>
@using HotelWebApp.Data.Entities

@{
    ViewData["Title"] = "My Reservations";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Make a New Reservation</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        You do not have any reservations yet.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Room Number
                </th>
                <th>
                    Check-in Date
                </th>
                <th>
                    Check-out Date
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    Status
                </th>
                <th></th> <!-- Header para a coluna de botões de ação -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.RoomNumber)
                    </td>
                    <td>
                        @item.CheckInDate.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.CheckOutDate.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.TotalPrice.ToString("C")
                    </td>
                    <td>
                        @{
                            var badgeClass = item.Status switch
                            {
                                ReservationStatus.Confirmed => "bg-success",
                                ReservationStatus.CheckedOut => "bg-info",
                                ReservationStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@item.Status</span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">

                            @* O botão "Details" está sempre visível *@
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>

                            @* Os botões de gestão só aparecem para reservas futuras e confirmadas *@
                            @if (item.Status == ReservationStatus.Confirmed && item.CheckInDate.Date > DateTime.Today.Date)
                            {
                                <a asp-action="RequestChange" asp-route-id="@item.Id" class="btn btn-outline-warning">Manage</a>
                                <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-outline-danger">Cancel</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
