@model HotelWebApp.Models.ReservationViewModel
@using HotelWebApp.Data.Entities
@using HotelWebApp.Services

@{
    ViewData["Title"] = "Edit Reservation";
    var isEditable = ViewBag.IsEditable ?? false;
    var isCheckedIn = Model.Status == ReservationStatus.CheckedIn;
}

<h1>Edit Reservation</h1>

<h4>Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            @* Este ValidationSummary irá mostrar a mensagem "Cannot edit..." que definimos no Controller *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label">Guest</label>
                @* O campo Guest é sempre readonly *@
                <input type="text" class="form-control" value="@Model.Guests.FirstOrDefault(g => g.Selected)?.Text" readonly />
                <input type="hidden" asp-for="GuestId" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label">Room</label>
                @* Quarto também não deve ser alterado após a reserva estar confirmada *@
                <select asp-for="RoomId" class="form-control" asp-items="Model.Rooms" disabled="@(!isEditable || isCheckedIn)"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckInDate" class="control-label"></label>
                @* A data de Check-in só pode ser alterada antes do check-in ser feito *@
                <input asp-for="CheckInDate" class="form-control" type="date" disabled="@isCheckedIn" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckOutDate" class="control-label"></label>
                <input asp-for="CheckOutDate" class="form-control" type="date" disabled="@(!isEditable)" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumberOfGuests" class="control-label"></label>
                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" disabled="@isCheckedIn" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <p><strong>Current Status: @Model.Status.GetDisplayName()</strong></p>
                <input type="hidden" asp-for="Status" />
            </div>

            <div class="form-group mt-4">
                @if (isEditable)
                {
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                }

                <a asp-action="Details"
                   asp-route-id="@Model.Id"
                   asp-route-source="@ViewBag.Source"
                   class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}