@using HotelWebApp.Data.Entities
@model HotelWebApp.Models.ReservationViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>Edit Reservation</h1>

<h4>Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label">Guest</label>
                <input type="text" class="form-control" value="@Model.Guests.FirstOrDefault(g => g.Selected)?.Text" readonly />
                <input type="hidden" asp-for="GuestId" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckInDate" class="control-label"></label>
                <input asp-for="CheckInDate" class="form-control" type="date" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckOutDate" class="control-label"></label>
                <input asp-for="CheckOutDate" class="form-control" type="date" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumberOfGuests" class="control-label"></label>
                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label">Room</label>
                <select asp-for="RoomId" class="form-control" asp-items="Model.Rooms">
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <p><strong>Current Status: @Model.Status.ToString()</strong></p>
                <p><small>Status can only be changed via the Check-In/Check-Out/Cancel buttons on the main list.</small></p>
                <input type="hidden" asp-for="Status" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
