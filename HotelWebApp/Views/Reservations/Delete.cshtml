@model HotelWebApp.Data.Entities.Reservation
@using HotelWebApp.Services

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="container mt-4">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <h3 class="fw-normal">Are you sure you want to permanently delete this reservation?</h3>
    <p class="text-danger"><strong>Warning:</strong> This action cannot be undone.</p>
    <hr />

    <div class="card bg-light">
        <div class="card-header">
            <h5 class="mb-0">You are about to delete the following reservation:</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Guest:</dt>
                <dd class="col-sm-9">@Model.ApplicationUser.FullName</dd>

                <dt class="col-sm-3">Room:</dt>
                <dd class="col-sm-9">@Model.Room.RoomNumber (@Model.Room.Type)</dd>

                <dt class="col-sm-3">Check-in:</dt>
                <dd class="col-sm-9">@Model.CheckInDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Check-out:</dt>
                <dd class="col-sm-9">@Model.CheckOutDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">@Model.Status.GetDisplayName()</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Permanently Delete</button>
        <a asp-action="Index" class="btn btn-secondary">No, Go Back to List</a>
    </form>
</div>