@model HotelWebApp.Models.ChangeRequestViewModel

@{
    ViewData["Title"] = "Request a Change to Your Reservation";
}

<h1>@ViewData["Title"]</h1>
<h4>Reservation ID: @Model.ReservationId</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="RequestChange" method="post">

            @* Mostra os erros de validação do ModelState *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Campo escondido para enviar o ID da reserva de volta para o Controller *@
            <input type="hidden" asp-for="ReservationId" />

            <div class="form-group">
                <label asp-for="RequestDetails" class="control-label"></label>
                <textarea asp-for="RequestDetails" class="form-control" rows="5" placeholder="e.g., 'We would like to postpone our stay by one week.'"></textarea>
                <span asp-validation-for="RequestDetails" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Submit Request" class="btn btn-primary" />
                <a asp-action="MyReservations" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
