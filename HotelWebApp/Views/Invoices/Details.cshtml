@model HotelWebApp.Data.Entities.Invoice
@using HotelWebApp.Data.Entities
@using HotelWebApp.Services

@{
    ViewData["Title"] = $"Invoice #{Model.Id}";
    var totalPaid = Model.Payments.Sum(p => p.Amount);
    var balanceDue = Model.TotalAmount - totalPaid;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">@ViewData["Title"]</h1>
            <p class="text-muted">Details for the reservation of @Model.Guest.FullName.</p>
        </div>
        <div>
            @if (ViewBag.Source == "dashboard")
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            }
            else
            {
                <a asp-controller="Reservations" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Reservations List
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h4 class="mb-0">Invoice Summary</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Guest:</dt>
                        <dd class="col-sm-8">@Model.Guest.FullName</dd>
                        <dt class="col-sm-4">Room:</dt>
                        <dd class="col-sm-8">@Model.Reservation.Room.RoomNumber</dd>
                        <dt class="col-sm-4">Invoice Date:</dt>
                        <dd class="col-sm-8">@Model.InvoiceDate.ToLocalTime().ToString("g")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5">Total Amount:</dt>
                        <dd class="col-sm-7">@Model.TotalAmount.ToString("C")</dd>
                        <dt class="col-sm-5">Amount Paid:</dt>
                        <dd class="col-sm-7 text-success">@totalPaid.ToString("C")</dd>
                        <dt class="col-sm-5"><strong>Balance Due:</strong></dt>
                        <dd class="col-sm-7"><strong>@balanceDue.ToString("C")</strong></dd>
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-@(Model.Status == InvoiceStatus.Paid ? "success" : (Model.Status == InvoiceStatus.Unpaid ? "danger" : "warning"))">
                                @Model.Status.GetDisplayName()
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Status != InvoiceStatus.Paid)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h4>Register Payment</h4>
            </div>
            <div class="card-body">
                <form asp-action="AddPayment" method="post">
                    <input type="hidden" name="invoiceId" value="@Model.Id" />
                    <input type="hidden" name="source" value="@ViewBag.Source" />
                    <div class="row align-items-end">
                        <div class="form-group col-md-4">
                            <label for="amount" class="control-label">Amount</label>
                            <input type="number" step="0.01" name="amount" class="form-control" value="@balanceDue.ToString("F2").Replace(',', '.')" />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="paymentMethod" class="control-label">Payment Method</label>
                            <select name="paymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
                        </div>
                        <div class="form-group col-md-4">
                            <button type="submit" class="btn btn-primary w-100">Add Payment</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header">
            <h4>Payment History</h4>
        </div>
        <div class="card-body p-0">
            @if (Model.Payments.Any())
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Method</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToLocalTime().ToString("g")</td>
                                <td>@payment.PaymentMethod.GetDisplayName()</td>
                                <td class="text-end">@payment.Amount.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="p-3 text-muted">No payments have been registered for this invoice yet.</p>
            }
        </div>
    </div>
</div>