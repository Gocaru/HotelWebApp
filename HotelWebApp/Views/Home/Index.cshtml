@using HotelWebApp.Data.Entities
@using HotelWebApp.Models
@model HomeDashboardViewModel?

@{
    ViewData["Title"] = User.IsInRole("Employee") ? "Dashboard" : (User.IsInRole("Admin") ? "Admin Panel" : "Welcome");
}

@if (User.IsInRole("Employee") && Model != null)
{
    <div class="container-fluid">
        <div class="text-center mb-5">
            <h1 class="display-4">Dashboard</h1>
            <p class="lead text-muted">Activity summary for today, @DateTime.Today.ToLongDateString()</p>
        </div>

        <div class="row g-4">
            @* Column for Check-ins *@
            <div class="col-lg-6 d-flex">
                <div class="card shadow-sm w-100">
                    <div class="card-header bg-success bg-gradient text-white">
                        <h4 class="card-title mb-0"><i class="fas fa-calendar-check me-2"></i> Today's Check-ins</h4>
                    </div>
                    @if (Model.CheckInsToday.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var reservation in Model.CheckInsToday)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center @(reservation.Status != ReservationStatus.Confirmed ? "bg-light text-muted" : "")">
                                    <span>
                                        <strong>@reservation.ApplicationUser.FullName</strong> - Room @reservation.Room.RoomNumber

                                        @if (reservation.Status == ReservationStatus.CheckedIn)
                                        {
                                            <span class="badge bg-success ms-2">Checked-In</span>
                                        }
                                    </span>
                                    <div>
                                        @if (reservation.Status == ReservationStatus.Confirmed)
                                        {
                                            <form asp-controller="Reservations" asp-action="CheckIn" asp-route-id="@reservation.Id" asp-route-source="dashboard" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-success">Check-in</button>
                                            </form>
                                        }
                                        <a asp-controller="Reservations" asp-action="Details" asp-route-id="@reservation.Id" asp-route-source="dashboard" class="btn btn-sm btn-outline-secondary">Details</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="card-body text-center text-muted">
                            <p class="mb-0">No check-ins scheduled for today.</p>
                        </div>
                    }
                </div>
            </div>

            @* Column for Check-outs *@
            <div class="col-lg-6 d-flex">
                <div class="card shadow-sm w-100">
                    <div class="card-header bg-danger bg-gradient text-white">
                        <h4 class="card-title mb-0"><i class="fas fa-calendar-times me-2"></i> Today's Check-outs</h4>
                    </div>
                    @if (Model.CheckOutsToday.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var reservation in Model.CheckOutsToday)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><strong>@reservation.ApplicationUser.FullName</strong> - Room @reservation.Room.RoomNumber</span>
                                    <div>
                                        @if (reservation.Status == ReservationStatus.CheckedIn)
                                        {
                                            <form asp-controller="Reservations" asp-action="CheckOut" asp-route-id="@reservation.Id" asp-route-source="dashboard" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger">Check-out</button>
                                            </form>
                                        }
                                        <a asp-controller="Reservations" asp-action="Details" asp-route-id="@reservation.Id" asp-route-source="dashboard" class="btn btn-sm btn-outline-secondary">Details</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="card-body text-center text-muted">
                            <p class="mb-0">No check-outs scheduled for today.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row g-4 mt-4">
            <div class="col-lg-6 d-flex">
                <div class="card shadow-sm w-100">
                    <div class="card-header">
                        <h4 class="card-title mb-0"><i class="fas fa-cogs me-2"></i> Administrative Tasks</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Run periodic tasks to keep the hotel system up-to-date.</p>
                        <form asp-controller="Reservations" asp-action="ProcessNoShows" method="post" onsubmit="return confirm('Are you sure?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning"><i class="fas fa-user-clock me-2"></i>Process "No-Shows"</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 d-flex">
                <div class="card shadow-sm w-100 @(Model.PendingChangeRequests.Any() ? "border-warning" : "")">
                    <div class="card-header @(Model.PendingChangeRequests.Any() ? "bg-warning bg-gradient text-dark" : "")">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i> Pending Change Requests
                            @if (Model.PendingChangeRequests.Any())
                            {
                                <span class="badge bg-danger ms-2">@Model.PendingChangeRequests.Count()</span>
                            }
                        </h4>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (Model.PendingChangeRequests.Any())
                        {
                            @foreach (var request in Model.PendingChangeRequests)
                            {
                                <li class="list-group-item">
                                    <p class="mb-1">Guest <strong>@request.Reservation.ApplicationUser.FullName</strong></p>
                                    <p class="mb-1 fst-italic text-muted">"@request.RequestDetails"</p>
                                    <a asp-controller="Reservations" asp-action="Details" asp-route-id="@request.ReservationId" asp-route-source="dashboard" class="btn btn-primary btn-sm mt-2">Process Request</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center text-muted p-4">There are no pending requests.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else if (User.IsInRole("Admin"))
{
    <div class="container text-center my-5">
        <h1 class="display-4">Administrator Panel</h1>
        <p class="lead text-muted">System management and configuration.</p>
        <hr class="my-4">
        <div class="row justify-content-center g-3">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-bed me-2"></i>Manage Rooms</h5>
                        <p class="card-text">Create, edit, and manage all hotel rooms and their properties.</p>
                        <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary mt-auto">Go to Rooms</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-concierge-bell me-2"></i>Manage Amenities</h5>
                        <p class="card-text">Define the extra services and amenities available for guests.</p>
                        <a asp-controller="Amenities" asp-action="Index" class="btn btn-primary mt-auto">Go to Amenities</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-users-cog me-2"></i>Manage Employees</h5>
                        <p class="card-text">Manage user accounts and access levels for all hotel staff members.</p>
                        <a asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto">Go to Employees</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @* Original content for guests, anonymous users, etc. *@
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="display-3 fw-bold">Your Perfect Getaway Awaits</h1>
            <p class="lead my-4">Experience luxury and comfort like never before. Book your stay with us today.</p>

            <div class="card bg-light bg-opacity-75 p-4 d-inline-block shadow">
                <form asp-controller="Rooms" asp-action="SearchResults" method="get" class="row g-3 align-items-center">
                    <div class="col-md">
                        <label for="checkInDate" class="visually-hidden">Check-in Date</label>
                        <input type="date" name="checkInDate" class="form-control" placeholder="Check-in Date" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md">
                        <label for="checkOutDate" class="visually-hidden">Check-out Date</label>
                        <input type="date" name="checkOutDate" class="form-control" placeholder="Check-out Date" value="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary w-100">Check Availability</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <div class="text-center mb-5">
            <h2>Why Choose Us?</h2>
            <p class="lead text-muted">We offer the best services to make your stay unforgettable.</p>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="fa-stack fa-3x mb-3 text-primary">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fas fa-wifi fa-stack-1x fa-inverse"></i>
                </div>
                <h4>Free High-Speed Wi-Fi</h4>
                <p class="text-muted">Stay connected with our complimentary Wi-Fi available throughout the hotel.</p>
            </div>
            <div class="col-md-4">
                <div class="fa-stack fa-3x mb-3 text-primary">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fas fa-swimming-pool fa-stack-1x fa-inverse"></i>
                </div>
                <h4>Luxury Pool</h4>
                <p class="text-muted">Relax and unwind in our stunning infinity pool with panoramic views.</p>
            </div>
            <div class="col-md-4">
                <div class="fa-stack fa-3x mb-3 text-primary">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fas fa-utensils fa-stack-1x fa-inverse"></i>
                </div>
                <h4>Gourmet Restaurant</h4>
                <p class="text-muted">Indulge your senses with exquisite dishes prepared by our world-class chefs.</p>
            </div>
        </div>
    </div>
}
