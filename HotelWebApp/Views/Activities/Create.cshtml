@model HotelWebApp.Data.Entities.Activity

@{
    ViewData["Title"] = "Create Activity";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p class="lead text-muted">Add a new activity or service available at the hotel.</p>
    <hr />

    <div class="row">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Spa & Massage" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the activity"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Capacity" class="control-label"></label>
                                    <input asp-for="Capacity" type="number" class="form-control" placeholder="Max participants" />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Duration" class="control-label"></label>
                                    <input asp-for="Duration" class="form-control" placeholder="e.g., 2 hours" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Schedule" class="control-label"></label>
                                    <input asp-for="Schedule" class="form-control" placeholder="e.g., Daily 10:00-18:00" />
                                    <span asp-validation-for="Schedule" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Active (visible to guests)
                            </label>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create Activity" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
