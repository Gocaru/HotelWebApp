@model HotelWebApp.Data.Entities.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <h3>Are you sure you want to permanently delete this room?</h3>
    <p class="text-danger"><strong>Warning:</strong> This action cannot be undone.</p>
    <hr />

    <div class="card bg-light">
        <div class="card-header">
            <h5 class="mb-0">You are about to delete Room: <strong>@Model.RoomNumber</strong></h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Type)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Capacity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PricePerNight)</dt>
                <dd class="col-sm-8">@Model.PricePerNight.ToString("C")</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, Permanently Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
    </form>
</div>