@model HotelWebApp.Models.RoomViewModel
@using HotelWebApp.Data.Entities

@{
    ViewData["Title"] = "Create a New Room";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p class="text-muted">Enter the details for the new room.</p>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RoomNumber" class="control-label"></label>
                                <input asp-for="RoomNumber" class="form-control" />
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Type" class="control-label"></label>
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<RoomType>()">
                                    <option value="">-- Select Room Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Capacity" class="control-label"></label>
                                <input asp-for="Capacity" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerNight" class="control-label"></label>
                                <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="PricePerNight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<RoomStatus>()">
                                <option value="">-- Select Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept=".jpg,.jpeg,.png" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create Room" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}