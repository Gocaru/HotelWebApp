@model HotelWebApp.Data.Entities.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@ViewData["Title"]</h1>
            <p class="lead text-muted">Viewing details for Room @Model.RoomNumber</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Room Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Room Number</dt>
                        <dd class="col-sm-8">@Model.RoomNumber</dd>

                        <dt class="col-sm-4">Room Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity people</dd>

                        <dt class="col-sm-4">Price per Night</dt>
                        <dd class="col-sm-8">@Model.PricePerNight.ToString("C")</dd>

                        <dt class="col-sm-4">Current Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit Room
                </a>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Room Image</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        var imagePath = "~/images/rooms/" + Model.ImageUrl;
                        <img src="@Url.Content(imagePath)" class="img-fluid rounded" alt="Image for room @Model.RoomNumber" asp-append-version="true" />
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">No image available for this room.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>