@model HotelWebApp.Data.Entities.ApplicationUser

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <h3 class="fw-normal">Are you sure you want to permanently delete this employee account?</h3>
    <p class="text-danger"><strong>Warning:</strong> This action cannot be undone.</p>
    <hr />

    <div class="card bg-light">
        <div class="card-header">
            <h5 class="mb-0">You are about to delete the following employee:</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, Permanently Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
    </form>
</div>