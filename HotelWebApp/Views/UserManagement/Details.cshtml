@model HotelWebApp.Data.Entities.ApplicationUser

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@ViewData["Title"]</h1>
            <p class="lead text-muted">Read-only information for @Model.FullName</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Employee Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email Address</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Email Confirmed</dt>
                <dd class="col-sm-9">
                    @if (Model.EmailConfirmed)
                    {
                        <span class="text-success"><i class="fas fa-check-circle me-1"></i> Yes</span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="fas fa-times-circle me-1"></i> No</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Edit Employee
        </a>
    </div>
</div>