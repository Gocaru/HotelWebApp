@model IEnumerable<HotelWebApp.Data.Entities.ApplicationUser>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">@ViewData["Title"]</h1>
            <p class="text-muted">Create and manage accounts for hotel staff.</p>
        </div>
        <a asp-action="CreateEmployee" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Employee
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>User Name (Email)</th>
                        <th class="text-center">Email Confirmed</th>
                        <th style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                @if (user.EmailConfirmed)
                                {
                                    <i class="fas fa-check-circle text-success" title="Yes"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle text-danger" title="No"></i>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
